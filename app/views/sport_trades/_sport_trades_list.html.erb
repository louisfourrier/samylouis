
<div class="text-left">
	<%= form_tag("", method: "get", class: "form-inline") do %>

	<div class="form-group">
		<div class="input-group">
			<div class="input-group-addon">
				First Team
			</div>

			<%= text_field_tag :first_team, params[:first_team],prompt: "Nom equipe 1", class: 'form-control'  %>
		</div>
	</div>
	<div class="form-group">
		<div class="input-group">
			<div class="input-group-addon">
				Second Team
			</div>

			<%= text_field_tag :second_team, params[:second_team],prompt: "Nom equipe 2", class: 'form-control'  %>
		</div>
	</div>

	<div class="form-group">
		<div class="input-group">
			<div class="input-group-addon">
				Platform
			</div>

			<%= text_field_tag :platform, params[:platform], prompt: "Platform name", class: 'form-control'  %>
		</div>
	</div>

  <div class="form-group">
		<div class="input-group">
			<div class="input-group-addon">
				Sport
			</div>

			<%= text_field_tag :sport, params[:sport], prompt: "Platform name", class: 'form-control'  %>
		</div>
	</div>

	<div class="form-group">
		<div class="input-group">
			<div class="input-group-addon">
				Ordre
			</div>

			<%= select_tag(:order, options_for_select([["Created_at", "created_at-desc"], ["Event Date", "event_date-desc"]], params[:order]),prompt: "Ordre", class: 'form-control' ) %>
		</div>
	</div>

	<%= submit_tag("Rechercher", class: "btn btn-info") %>
	<% end %>
</div>
<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate sport_trades, renderer: BootstrapPagination::Rails  %>
		</div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Sport event</th>
      <th>Event date</th>
      <th>Platform name</th>
      <th>Sport</th>
      <th>Team first</th>
      <th>Team second</th>
      <th>Inverse sum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% sport_trades.each do |sport_trade| %>
      <tr>
        <td><%= link_to sport_trade.sport_event.try(:event_name), sport_trade.sport_event %></td>
        <td><%= sport_trade.event_date %></td>
        <td><%= sport_trade.platform_name %></td>
        <td><%= sport_trade.sport %></td>
        <td><%= sport_trade.team_first %></td>
        <td><%= sport_trade.team_second %></td>
        <td><%= sport_trade.inverse_sum %></td>
        <td><%= link_to 'Voir', sport_trade %></td>
        <td><%= link_to 'Edit', edit_sport_trade_path(sport_trade) %></td>
        <td><%= link_to 'Destroy', sport_trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate sport_trades, renderer: BootstrapPagination::Rails  %>
		</div>
</div>
